# M&M 2.0 Agent Configuration
# Copy this file to config.env and fill in your values

# ===============================
# Agent Identity
# ===============================
AGENT_ID=mnm-agent-001
AGENT_SECRET=your-secret-key-here

# ===============================
# Backend Server Connection
# ===============================
BACKEND_URL=wss://api.yourbackend.com/agent/ws
BACKEND_API_URL=https://api.yourbackend.com/api/v1
BACKEND_API_KEY=your-api-key-here

# Polling Configuration (fallback if WebSocket fails)
POLLING_INTERVAL=30
POLLING_ENABLED=true

# ===============================
# Sage 50 Configuration
# ===============================
# Company path - find this in Sage: File → Company Maintenance → Directory
# Can be local (C:\...) or network share (\\server\...)
SAGE_COMPANY_PATH=\\mnmsrv23\peachtree\Company\tescompa

# Alternative: ODBC connection (optional)
# SAGE_ODBC_DSN=SageLine50v29

# Credentials (if required)
SAGE_USERNAME=cscott
SAGE_PASSWORD=

# ===============================
# Carrier API Credentials
# ===============================
# FedEx (https://developer.fedex.com)
FEDEX_CLIENT_ID=
FEDEX_CLIENT_SECRET=
FEDEX_ACCOUNT_NUMBER=

# UPS (https://developer.ups.com)
UPS_CLIENT_ID=
UPS_CLIENT_SECRET=

# Royal Mail (https://developer.royalmail.net)
ROYAL_MAIL_CLIENT_ID=
ROYAL_MAIL_CLIENT_SECRET=

# ===============================
# Email Reports (SMTP)
# ===============================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourcompany.com

# Comma-separated list of report recipients
REPORT_RECIPIENTS=user1@company.com,user2@company.com

# ===============================
# Scheduling
# ===============================
# Twice daily sync (24h format)
MORNING_SYNC_TIME=08:00
NOON_SYNC_TIME=12:00
SYNC_ENABLED=true

# ===============================
# Logging
# ===============================
LOG_LEVEL=INFO
LOG_FILE=C:\ProgramData\MNMAgent\logs\agent.log

# ===============================
# Monitoring (Optional)
# ===============================
SENTRY_DSN=

# ===============================
# Agent Settings
# ===============================
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5
HEARTBEAT_INTERVAL=60
TASK_TIMEOUT=600
